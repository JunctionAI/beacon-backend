# Required API Keys for Adcast Backend

# Anthropic (Claude) API Key - Required for podcast script generation
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ElevenLabs API Key - Required for text-to-speech audio generation
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Optional API Keys

# YouTube Data API Key - For enhanced YouTube search (has free fallback)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Perplexity API Key - For enhanced web search (optional)
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# JWT Secret Key - Change in production for security
JWT_SECRET_KEY=your-secret-key-change-in-production

# Railway automatically provides PORT - don't set this locally
# PORT=8000
